<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/black"
    android:outlineAmbientShadowColor="#F30A0A"
    android:outlineSpotShadowColor="#F30A0A"
    android:divider="#ED3737"
    app:cardCornerRadius="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/postertvshow"
                android:layout_width="140dp"
                android:layout_height="230dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@drawable/hobit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:weightSum="3">


                <TextView
                    android:id="@+id/name_tvshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_paaji"
                    android:text="asdasdas"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/theloai_tvshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_paaji"
                    android:text="Genres:"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvshow_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Country:\t"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />

<!--                <TextView-->
<!--                    android:id="@+id/day_tvshow"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/chewy"-->
<!--                    android:text="Day:"-->
<!--                    android:textColor="#E3E4EC"-->
<!--                    android:textSize="18dp" />-->
                <TextView
                    android:id="@+id/last_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Day:"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Language :"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/daodien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Created By :"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/total_episodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Episodes :"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/total_season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Season :"
                    android:textColor="#E3E4EC"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OverView:"
                android:textColor="#F1093C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvshow_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/baloo_thambi"
                android:text="phim hay va rat dac sac"
                android:textColor="#E3E4EC"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>