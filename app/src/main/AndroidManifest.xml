<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviemobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.MyApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.MovieMobile">
        <activity
            android:name=".view.activity.MoreTvActivity"
            android:parentActivityName=".MainActivity"
            ></activity>
        <activity android:name=".view.activity.MoreMovieActivity" />
        <activity android:name=".view.activity.ReviewActivity" />
        <activity android:name=".view.activity.TrailerActivity" />
        <activity android:name=".view.activity.SplasSceenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.ForgotPassActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7345408921633152~3516460958" />

        <activity android:name=".view.activity.RegisterActivity" />
        <activity
            android:name=".view.activity.LoginUserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity
            android:name=".view.activity.TvShowDetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".view.activity.DetailCharacterActivity"
            />
        <activity
            android:name=".view.activity.DetailMovieActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>